<Window x:Class="AzureDevOpsPptWpf.Views.WorkItemDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Work Item Details" Height="400" Width="600">
    <ScrollViewer>
        <StackPanel Margin="10">
            <TextBlock FontWeight="Bold" FontSize="18" Text="{Binding Title}" Margin="0,0,0,10"/>
            <TextBlock Text="ID:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Id}" Margin="0,0,0,10"/>
            <TextBlock Text="Type:" FontWeight="Bold"/>
            <TextBlock Text="{Binding WorkItemType}" Margin="0,0,0,10"/>
            <TextBlock Text="Assigned To:" FontWeight="Bold"/>
            <TextBlock Text="{Binding AssignedTo}" Margin="0,0,0,10"/>
            <TextBlock Text="State:" FontWeight="Bold"/>
            <TextBlock Text="{Binding State}" Margin="0,0,0,10"/>
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" Margin="0,0,0,10"/>
        </StackPanel>
    </ScrollViewer>
</Window>