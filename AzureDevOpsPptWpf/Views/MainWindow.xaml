<Window x:Class="AzureDevOpsPptWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Azure DevOps Work Items" Height="600" Width="1025">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" >
            <TextBlock Text="Organization:" VerticalAlignment="Center"/>
            <TextBox Width="150" Name="OrgTextBox" Margin="5,0" Text="myOrg"/>
            <TextBlock Text="Project:" VerticalAlignment="Center"/>
            <TextBox Width="150" Name="ProjectTextBox" Margin="5,0" Text="myProject"/>
            <TextBlock Text="Team:" VerticalAlignment="Center"/>
            <ComboBox Width="150" Name="TeamComboBox" Margin="5,0" SelectionChanged="TeamComboBox_SelectionChanged"/>
            <TextBlock Text="Sprint:" VerticalAlignment="Center"/>
            <ComboBox Width="150" Name="SprintComboBox" Margin="5,0" SelectionChanged="SprintComboBox_SelectionChanged"/>
            <Button Content="Load Work Items" Margin="10,0" Click="LoadWorkItems_Click"/>
            <Button Content="Teams" Margin="10, 0" Click="LoadTeams_Click" />
        </StackPanel>

        <!-- Work Items DataGrid -->
        <DataGrid Name="WorkItemsDataGrid" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" 
                  IsReadOnly="True" MouseDoubleClick="WorkItemsDataGrid_MouseDoubleClick"
                  SelectionChanged="WorkItemsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" />
                <DataGridTextColumn Header="Type" Binding="{Binding WorkItemType}" Width="Auto" />
                <DataGridTextColumn Header="Assigned To" Binding="{Binding AssignedTo}" Width="*" />
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
